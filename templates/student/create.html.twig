{% extends 'base.html.twig' %}

{% block title %}Create New Student{% endblock %}

{% block body %}

<div class="container">
   <div class="row justify-content-center">
       <div class="col-md-8">
           <div>
               <div>
                    <h1>Create New Student</h1>
                </div>
               <div>
                     <form action="{{path('student_store')}}" method="POST">
                        <div class="form-group">
                                <label>Name:</label>
                                <input type="text" class="form-control" name="student_name">
                                <small class="form-text text-muted">Student name.</small>
                            </div>

                            <div class="form-group">
                                <label>Surname:</label>
                                <input type="text" class="form-control" name="student_surname">
                                <small class="form-text text-muted">Student surname.</small>
                            </div>
                            <div class="form-group">
                                <label>Email:</label>
                                <input type="text" class="form-control" name="student_email">
                                <small class="form-text text-muted">Student email adress.</small>
                            </div>
                            <div class="form-group">
                                <label>Phone:</label>
                                <input type="text" class="form-control" name="student_phone">
                                <small class="form-text text-muted">Student phone number.</small>
                            </div>
                            <input type="hidden" name="token" value="{{ csrf_token('check_csrf_hidden') }}"/>
                            <button type="submit" class="save-btn btn btn-add btn-block">Add new student</button>
                        </div>   
                    </form>
               </div>
           </div>
       </div>
   </div>
</div>
 
{% endblock %}