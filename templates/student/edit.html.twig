{% extends 'base.html.twig' %}

{% block title %}Modify Student Data
{% endblock %}

{% block body %}


	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div>
					<div>
						<h1>Modify Student Data</h1>
					</div>

					<div>
						<form action="{{path('student_update', {id: student.id})}}" method="POST">
							<div class="form-group">
								<label>Name:
								</label>
								<input type="text" class="form-control" name="student_name" value="{{student.name}}">
								<small class="form-text text-muted">Student name.</small>
							</div>
							<div class="form-group">
								<label>Surname:
								</label>
								<input type="text" class="form-control" name="student_surname" value="{{student.surname}}">
								<small class="form-text text-muted">Student surname.</small>
							</div>
                            <div class="form-group">
								<label>Email:
								</label>
								<input type="text" class="form-control" name="student_email" value="{{student.email}}">
								<small class="form-text text-muted">Student email adress.</small>
							</div>
                            <div class="form-group">
								<label>Phone:
								</label>
								<input type="text" class="form-control" name="student_phone" value="{{student.phone}}">
								<small class="form-text text-muted">Student phone number.</small>
							</div>

							<input type="hidden" name="token" value="{{ csrf_token('check_csrf_hidden') }}"/>
							<button type="submit" class="btn btn-add save-btn btn-block">Edit Student</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}