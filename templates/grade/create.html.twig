{% extends 'base.html.twig' %}

{% block title %}Create new Grade
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div>
					<div>
						<h1>Create new Grade </h1>
					</div>

					<div>
						<form action="{{path('grade_store')}}" method="POST">
							<div class="form-group">
								<label>Student:</label>
                                <select name="grade_student_id" class="form-control">
									<option value="0">Select student</option>
									{% for student in students %}
										<option value="{{student.id}}">{{student.name}}
											{{student.surname}}</option>
									{% endfor %}
								</select>
								<small class="form-text text-muted">Student to get a grade.</small>
							</div>
                            <div class="form-group">
								<label>Lectur:</label>
                                <select name="grade_lectur_id" class="form-control">
									<option value="0">Select lectur</option>
									{% for lectur in lectures %}
										<option value="{{lectur.id}}">{{lectur.name}}</option>
									{% endfor %}
								</select>
								<small class="form-text text-muted">Grade for lectur of a student.</small>
							</div>

							<div class="form-group">
								<label>Grade:</label>
								<input type="text" class="form-control" name="grade_grade">
								<small class="form-text text-muted">Student's grade.</small>
							</div>
							<input type="hidden" name="token" value="{{ csrf_token('check_csrf_hidden') }}"/>
							<button type="submit" class="btn btn-dark btn-add save-btn btn-block">Add new Grade</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}