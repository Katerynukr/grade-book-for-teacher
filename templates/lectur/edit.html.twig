{% extends 'base.html.twig' %}

{% block title %}Modify Lectur Data
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div>
					<div>
						<h1>Modify Lectur Data</h1>
					</div>

					<div>
						<form action="{{path('lectur_update', {id: lectur.id})}}" method="POST">
							<div class="form-group">
								<label>Name:
								</label>
								<input type="text" class="form-control" name="lectur_name" value="{{lectur.name}}">
								<small class="form-text text-muted">Lectur title.</small>
							</div>
							<div class="form-group">
								<label>Description:
								</label>
								<div class="textarea">
								<textarea class="form-control" name="lectur_description" id="summernote">{{lectur.description}}</textarea>
								</div>
								<small class="form-text text-muted">Lecture description.</small>
							</div>

							<input type="hidden" name="token" value="{{ csrf_token('check_csrf_hidden') }}"/>
							<button type="submit" class="btn save-btn btn-add btn-block">Edit Lectur</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}