{% extends 'base.html.twig' %}

{% block title %}Create New Lectur{% endblock %}

{% block body %}

<div class="container">
   <div class="row justify-content-center">
       <div class="col-md-8">
           <div>
               <div>
                    <h1>Create New Lectur</h1>
                </div>
               <div>
                     <form action="{{path('lectur_store')}}" method="POST">
                        <div class="form-group">
                                <label>Name:</label>
                                <input type="text" class="form-control input-text" name="lectur_name">
                                <small class="form-text text-muted">Lectur name.</small>
                            </div>

                            <div class="form-group">
                                <label>Description:</label>
                                <div class="textarea">
                                <textarea name="lectur_decription" id="summernote"></textarea>
                                </div>
                                <small class="form-text text-muted">Lectur description.</small>
                            </div>
                            <input type="hidden" name="token" value="{{ csrf_token('check_csrf_hidden') }}"/>
                            <button type="submit" class="save-btn btn btn-add btn-block">Add new lectur</button>
                        </div>   
                    </form>
               </div>
           </div>
       </div>
   </div>
</div>
 
{% endblock %}